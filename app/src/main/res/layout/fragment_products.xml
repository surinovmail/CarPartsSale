<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Orders"
    android:background="@color/oceanblue">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp">

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/shinalar"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="fitCenter"
                    android:layout_marginHorizontal="20dp"
                    android:src="@drawable/shinalar"/>

                <ImageButton
                    android:id="@+id/avtokimyo"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="fitCenter"
                    android:layout_marginHorizontal="20dp"
                    android:src="@drawable/avtokimyo"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/layout1">

                <ImageButton
                    android:id="@+id/akkumulyator"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="fitCenter"
                    android:layout_marginHorizontal="20dp"
                    android:src="@drawable/akkumulyator"/>

                <ImageButton
                    android:id="@+id/motormoyi"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="fitCenter"
                    android:layout_marginHorizontal="20dp"
                    android:src="@drawable/motormoylari"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/layout2">

                <ImageButton
                    android:id="@+id/asboblar"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="fitCenter"
                    android:layout_marginHorizontal="20dp"
                    android:src="@drawable/asboblar"/>

                <ImageButton
                    android:id="@+id/filtrlar"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="fitCenter"
                    android:layout_marginHorizontal="20dp"
                    android:src="@drawable/filtrlar"/>

            </LinearLayout>

        </RelativeLayout>



    </RelativeLayout>


</FrameLayout>